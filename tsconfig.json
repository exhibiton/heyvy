{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "jsx": "preserve",
    "module": "es2015",
    "moduleResolution": "node",
    "lib": ["dom", "esnext"],
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "allowJs": true,
    "target": "esnext",
    "sourceMap": true,
    "checkJs": false,
    "baseUrl": "./src",
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@types"],
    "paths": {
      "*": ["*"]
    }
  },
  "exclude": ["node_modules"]
}
